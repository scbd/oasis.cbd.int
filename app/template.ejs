<body ng-controller="TemplateController" id="top" 
class="hold-transition skin-blue sidebar-mini">
  <div class="wrapper ng-cloak">
    <!--<span id="appBaseUrl" style="display:none"><%=baseUrl%></span>-->
    <div class="m-app-loading" ng-animate-children style="display:none">

      <style type="text/css">
        [ng\:cloak],
        [ng-cloak],
        [data-ng-cloak],
        [x-ng-cloak],
        .ng-cloak,
        .x-ng-cloak {
          display: none !important;
        }

        div.m-app-loading {
          position: fixed;
        }

        div.m-app-loading div.animated-container {
          background-color: #FFFFFF;
          bottom: 0px;
          left: 0px;
          opacity: 1.0;
          position: fixed;
          right: 0px;
          top: 0px;
          z-index: 999999;
        }

        /* Used to initialize the ng-leave animation state. */

        div.m-app-loading div.animated-container.ng-leave {
          opacity: 1.0;
          transition: all linear 200ms;
          -webkit-transition: all linear 200ms;
        }

        /* Used to set the end properties of the ng-leave animation state. */

        div.m-app-loading div.animated-container.ng-leave-active {
          opacity: 0;
        }

        div.m-app-loading div.messaging {
          color: #1FA65D;
          font-family: monospace;
          left: 0px;
          margin-top: -37px;
          position: absolute;
          right: 0px;
          text-align: center;
          top: 30%;
        }

        div.m-app-loading h1 {
          font-size: 26px;
          line-height: 35px;
          margin: 0px 0px 20px 0px;
        }

        div.m-app-loading p {
          font-size: 18px;
          line-height: 14px;
          margin: 0px 0px 0px 0px;
        }
      </style>


      <!-- BEGIN: Actual animated container. -->
      <div class="animated-container">
        <div class="messaging">
          <span class="color-orange ng-scope" ng-if="development_env" style="font-size:48px;font-weight:bold;">
            <img src="https://absch.cbd.int/app/img/cbd-logo-green-en.svg" style="height:80px;">
          </span>

          <h1>
            <br>
            <span class="color-black">loading the
              <br>Oasis space </span>
            <br>
            <br>
            <i class="fa fa-spin fa-3x fa-circle-o-notch"></i>
          </h1>
        </div>
      </div>
      <!-- END: Actual animated container. -->

    </div>
    <iframe id="authenticationFrame" style="display:none"></iframe>
    <script>
      var domain = document.location.hostname.replace(/[^\.]+\./, '');

      if (domain == 'localhost') domain = 'cbddev.xyz';

      document.getElementById('authenticationFrame').src = 'https://accounts.' + domain + '/app/authorize.html';
    </script>
    <header class="main-header">
      <!-- Logo -->
      <a href="https://www.cbd.int" class="logo">
        <!-- mini logo for sidebar mini 50x50 pixels -->
